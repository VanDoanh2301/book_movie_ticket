<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#00FF00" /> <!-- Màu xanh lá khi được nhấn -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
        </shape>
    </item>
</selector>
