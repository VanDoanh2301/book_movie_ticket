<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_home"
    android:layout_height="match_parent"
    android:background="#F5F7F7"
    tools:context=".activity.MainActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/navi_bt" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navi_bt"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/home_bg"
        app:itemIconTint="@color/custom_select_navigationbt"
        app:itemTextColor="@color/custom_select_navigationbt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/custom_menu_navigation_bottom"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>